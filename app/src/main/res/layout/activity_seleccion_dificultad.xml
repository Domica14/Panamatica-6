            android:layout_width="180dp"
            android:layout_height="211dp" app:srcCompat="@drawable/tienda" android:id="@+id/opcionTienda"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.823" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="MenÃº Principal"
