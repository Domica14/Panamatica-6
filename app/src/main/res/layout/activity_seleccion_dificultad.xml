<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".unidad1.SeleccionDificultad" android:background="#FFD390">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/blue_stroke"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/barraNavegacion2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Seleccione la dificultad"
            android:layout_width="269dp"
            android:layout_height="110dp" android:id="@+id/txtTitulo"
            android:textAlignment="center" android:textSize="38sp"
            android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.098" android:fontFamily="@font/inter_black"
            android:textColor="#000000"/>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="220dp" app:srcCompat="@drawable/modoprincipiante"
            android:id="@+id/opcionPrincipiante"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.363"
    />
    <ImageView
            android:layout_width="207dp"
            android:layout_height="221dp" app:srcCompat="@drawable/modoavanzado" android:id="@+id/opcionAvanzado"
            app:layout_constraintTop_toBottomOf="@+id/opcionPrincipiante"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.086" app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:text="MenÃº Principal"
            android:layout_width="207dp"
            android:layout_height="62dp" android:id="@+id/btnMenu"
            android:backgroundTint="#F68D2E"
            android:fontFamily="@font/inter_black" android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/opcionAvanzado" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.515"/>
</androidx.constraintlayout.widget.ConstraintLayout>