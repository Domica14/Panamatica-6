<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menu.Tienda" android:background="#FFD390">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/blue_stroke"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/barraNavegacion2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Tienda de recompensas"
            android:layout_width="269dp"
            android:layout_height="110dp" android:id="@+id/txtRecompensa"
            android:textAlignment="center" android:textSize="38sp"
            android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.116" android:fontFamily="@font/inter_black"
            android:textColor="#000000"/>
    <TextView
            android:text="Puntos\n0"
            android:layout_width="216dp"
            android:layout_height="67dp" android:id="@+id/txtPuntos"
            android:textAlignment="center" android:textSize="25sp"
            android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.29" android:fontFamily="@font/inter_black"
            android:textColor="#000000" />
    <ImageView
            android:layout_width="322dp"
            android:layout_height="165dp" app:srcCompat="@drawable/recompensa1"
            android:id="@+id/recompensa1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.462"/>
    <Button
            android:text="Regresar"
            android:layout_width="207dp"
            android:layout_height="62dp" android:id="@+id/btnRegresarTienda"
            android:backgroundTint="#F68D2E"
            android:fontFamily="@font/inter_black" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.965" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Pistas\n0"
            android:layout_width="105dp"
            android:layout_height="74dp"
            android:textAlignment="center" android:textSize="25sp"
            android:textStyle="bold|italic" android:id="@+id/Pistas"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/barraNavegacion2"
            app:layout_constraintVertical_bias="0.668" app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>